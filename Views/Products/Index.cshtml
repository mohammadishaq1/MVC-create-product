@model List<p6.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Products</h2>

<form class="form-inline md-form mr-auto mb-4">
    @Html.TextBox("Search", ViewBag.value as string, new { @class = "form-control mr-1", placeholder="Search"})

    <button class="btn aqua-gradient btn-rounded btn-sm my-0" type="submit">Search</button>
</form>

<a href="/products/create" class="btn btn-primary btn-lg active">Create</a>
<table class="table">
    <tr>
        <th>
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/products/index?SortColumn=ProductID&IconClass=fa-sort-asc">Product ID</a>
                if (ViewBag.SortColumn == "ProductID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/products/index?SortColumn=ProductID&IconClass=fa-sort-desc">Product ID</a>
                if (ViewBag.SortColumn == "ProductID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }


        </th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Date of Purchase</th>
        <th>Availibility</th>
        <th>Category ID</th>
        <th>Brand Id</th>
        <th>Active</th>
       
    </tr>
    @foreach(var item in Model)
    {
<tr>


    <td>@Html.DisplayFor(m => item.ProductID)</td>
    <td>@Html.DisplayFor(m => item.ProductName)</td>
    <td>@Html.DisplayFor(m => item.Price)</td>
    <td>@Html.DisplayFor(m => item.DateOfPurchase)</td>
    <td>@Html.DisplayFor(m => item.AvailabilityStatus)</td>
    <td>@Html.DisplayFor(m => item.Category.CategoryName)</td>
    <td>@Html.DisplayFor(m => item.Brand.BrandName)</td>
    <td>@Html.DisplayFor(m => item.Active)</td>
    <td>
        @Html.ActionLink("Details","Details", new { id=item.ProductID, controller="Products"})
           
    </td>
    <td>
        @Html.ActionLink("Edit","Edit", new { id=item.ProductID, controller="Products"})

    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", new { id = item.ProductID, controller = "Products" })
    </td>
</tr>
    }
</table>