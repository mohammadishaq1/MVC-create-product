@model List<p6.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Products</h2>

<form class="form-inline md-form mr-auto mb-4">
    <input class="form-control mr-sm-2" type="text" name="Search" id="Search" placeholder="Search" aria-label="Search" value="@ViewBag.value">
    <button class="btn aqua-gradient btn-rounded btn-sm my-0" type="submit">Search</button>
</form>

<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Date of Purchase</th>
        <th>Availibility</th>
        <th>Category ID</th>
        <th>Brand Id</th>
        <th>Active</th>

    </tr>
    @foreach(var item in Model)
    {
<tr>
    <td>@item.ProductID</td>
    <td>@item.ProductName</td>
    <td>@item.Price</td>
    <td>@item.DateOfPurchase</td>
    <td>@item.AvailabilityStatus</td>
    <td>@item.CategoryID</td>
    <td>@item.BrandID</td>
    <td>@item.Active</td>
    <td>
        <a href="/products/details/@item.ProductID">Details</a>
    </td>
</tr>
    }
</table>